#footer
	.icons
		li
			padding 0
			margin-right .5em
			&:last-child
				margin-right 0
			a
				min-width 3em
				min-height 3em
				display block
				text-align center
				&::before
					vertical-align middle
					line-height 2
				&::after
					content ''
					border solid 1px rgba(255, 255, 255, 0.4)
					border-radius 100%
					position absolute
					top 0
					right 0
					bottom 0
					left 0
					margin auto
				&:hover
					&::after
						background-color rgba(255, 255, 255, .3)
						transition .3s linear
						-webkit-transition .3s linear
